# Configuration Discord
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_guild_id_here

# Canaux de logs séparés
STATUS_LOG_CHANNEL_ID=your_status_log_channel_id_here
MESSAGES_LOG_CHANNEL_ID=your_messages_log_channel_id_here
FORBIDDEN_WORDS_LOG_CHANNEL_ID=your_forbidden_words_log_channel_id_here
MODERATION_LOG_CHANNEL_ID=your_moderation_log_channel_id_here

# Canaux ignorés pour le logging des messages (IDs séparés par des virgules)
IGNORED_CHANNELS=channel_id_1,channel_id_2,channel_id_3

# Configuration des logs
LOG_LEVEL=info

# Chemins de stockage (en dehors du dossier Logawa)
LOGS_PATH=/home/martynx/logawa-logs

# Webhook externe pour logs (optionnel)
WEBHOOK_URL=your_external_webhook_url_here

# Configuration de sauvegarde automatique (désactivée par défaut)
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_NOTIFY_DISCORD=false
BACKUP_WEBHOOK_URL=your_backup_webhook_url_here 